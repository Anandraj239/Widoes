//}
// for (int i = 1; i<=50; i++)
// {
//     /*code */
//     cout<<i<<endl;
// }
//Example of infinite forr loop (DON'T RUN)
// for (int i=1; 40<=50; i++)
// {
//     /*code*/
//     cout<<i<<endl;
// }

/*While loop in c++*/
//syntax:
//while (condition)
// {
//     c++statements;
// }

//Printing 1 to 50 using while loop 
// int i =1;
// while(i<=50)
// {
//     cout<<i<<endl;
//     i++;
// }

//Example of infinite while loop 
// int i = 1;
// while (true)
