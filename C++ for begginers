//     cout<<i<<endl;
// }

/*Do while loop in c++*/
// symtax 
//do
//{
//   c++ statements:
//} While (conditons);

//Printing 1 to 50 using while loop 
// int i=1;
// do{
//     cout<<i<<endl;
//     i++;
// }while(false);

return 0;
}

